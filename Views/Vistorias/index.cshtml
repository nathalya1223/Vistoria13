@model IEnumerable<Vistoria_projeto.Models.Vistoria>

<h2 class="mb-3">Lista de Vistorias</h2>

<a asp-action="Criar" class="btn btn-primary mb-3">➕ Nova Vistoria</a>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Responsável</th>
            <th>Data</th>
            <th>Horário</th>
            <th>Imóvel</th>
            <th>Status</th>
            <th style="width: 160px;">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Responsavel</td>
                <td>@item.Data.ToShortDateString()</td>
                <td>@item.Horario</td>
                <td>@item.Imovel</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Excluir" asp-route-id="@item.Id" class="btn btn-danger btn-sm"
                       onclick="return confirm('Tem certeza que deseja excluir esta vistoria?');">
                       Excluir
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

