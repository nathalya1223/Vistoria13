@model Vistoria_projeto.Models.Vistoria

@{
    ViewData["Title"] = "Nova Vistoria";
}

<h2>Nova Vistoria</h2>

<form asp-action="Create">
    <div class="form-group">
        <label>Responsável</label>
        <input asp-for="Responsavel" class="form-control" />
    </div>

    <div class="form-group">
        <label>Data</label>
        <input asp-for="Data" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label>Horário</label>
        <input asp-for="Horario" type="time" class="form-control" />
    </div>

    <div class="form-group">
        <label>Imóvel</label>
        <select asp-for="Imovel" class="form-control">
            <option value="">Selecione</option>
            <option>Ap 101</option>
            <option>Ap 102</option>
            <option>Ap 201</option>
            <option>Ap 202</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>
