@model Vistoria_projeto.Models.Vistoria

<h2>Criar Nova Vistoria</h2>

<form asp-action="Criar" method="post">
    <div class="form-group">
        <label asp-for="Responsavel"></label>
        <input asp-for="Responsavel" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Data"></label>
        <input asp-for="Data" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Horario"></label>
        <input asp-for="Horario" type="time" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Imovel"></label>
        <select asp-for="Imovel" class="form-control">
            <option value="">Selecione um im√≥vel</option>
            <option>Ap 101</option>
            <option>Ap 102</option>
            <option>Ap 201</option>
            <option>Casa 01</option>
            <option>Casa 02</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Status"></label>
        <select asp-for="Status" class="form-control">
            <option>Agendada</option>
            <option>Realizada</option>
            <option>Cancelada</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success mt-3">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Voltar</a>
</form>
