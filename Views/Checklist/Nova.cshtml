@model Vistoria_projeto.Models.ChecklistVistoria

<div class="container mt-4">
    <h3>Nova Vistoria</h3>
    <hr />

    <form asp-action="Nova" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3 row">
            <div class="col-md-6">
                <label asp-for="Imovel" class="form-label">Imóvel</label>
                <input asp-for="Imovel" class="form-control" required />
            </div>
            <div class="col-md-6">
                <label asp-for="Responsavel" class="form-label">Responsável</label>
                <input asp-for="Responsavel" class="form-control" required />
            </div>
        </div>

        <div class="mb-3 row">
            <div class="col-md-3">
                <label asp-for="Status" class="form-label">Status</label>
                <select asp-for="Status" class="form-select">
                    <option>Entrada</option>
                    <option>Saída</option>
                    <option>Agendada</option>
                    <option>Concluída</option>
                </select>
            </div>
            <div class="col-md-3">
                <label asp-for="Data" class="form-label">Data da Vistoria</label>
                <input asp-for="Data" type="date" class="form-control" required />
            </div>
            <div class="col-md-3">
                <label asp-for="Horario" class="form-label">Horário</label>
                <input asp-for="Horario" type="time" class="form-control" required />
            </div>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary px-4">Continuar para Checklist</button>
        </div>
    </form>
</div>
