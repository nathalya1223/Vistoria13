@model Vistoria_projeto.Models.ChecklistVistoria

@{
    ViewData["Title"] = "Detalhes da Vistoria";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    /* Botão fixo sempre visível */
    .botao-voltar-fixo {
        position: fixed;
        bottom: 20px;
        right: 20px;
        z-index: 1000;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        border-radius: 8px;
        padding: 10px 18px;
    }
</style>

<div class="container mt-4 mb-5">
    <h3>Detalhes da Vistoria</h3>
    <hr />

    <!-- Informações principais -->
    <div class="row mb-3">
        <div class="col-md-4"><strong>Imóvel:</strong> @Model.Imovel</div>
        <div class="col-md-4"><strong>Responsável:</strong> @Model.Responsavel</div>
        <div class="col-md-4"><strong>Status:</strong> @Model.Status</div>
    </div>
    <div class="row mb-3">
        <div class="col-md-4"><strong>Data:</strong> @Model.Data.ToString("dd/MM/yyyy")</div>
        <div class="col-md-4"><strong>Horário:</strong> @Model.Horario</div>
    </div>

    <hr />

    <!-- Paredes e Tetos -->
    <h5>Paredes e Tetos</h5>
    <div class="form-check"><input class="form-check-input" type="checkbox" checked="@Model.PinturaBomEstado" disabled /><label class="form-check-label">Pintura em bom estado</label></div>
    <div class="form-check"><input class="form-check-input" type="checkbox" checked="@Model.SemRachaduras" disabled /><label class="form-check-label">Sem rachaduras</label></div>
    <div class="form-check"><input class="form-check-input" type="checkbox" checked="@Model.SemInfiltracoes" disabled /><label class="form-check-label">Sem infiltrações</label></div>
    <div class="form-check"><input class="form-check-input" type="checkbox" checked="@Model.SemManchas" disabled /><label class="form-check-label">Sem manchas</label></div>

    <!-- Pisos -->
    <h5 class="mt-3">Pisos</h5>
    <div class="form-check"><input class="form-check-input" type="checkbox" checked="@Model.PisoBomEstado" disabled /><label class="form-check-label">Piso em bom estado</label></div>
    <div class="form-check"><input class="form-check-input" type="checkbox" checked="@Model.RodapesConservados" disabled /><label class="form-check-label">Rodapés conservados</label></div>
    <div class="form-check"><input class="form-check-input" type="checkbox" checked="@Model.SemTrincas" disabled /><label class="form-check-label">Sem trincas</label></div>

    <!-- Portas e Janelas -->
    <h5 class="mt-3">Portas e Janelas</h5>
    <div class="form-check"><input class="form-check-input" type="checkbox" checked="@Model.PortasFuncionando" disabled /><label class="form-check-label">Portas funcionando</label></div>
    <div class="form-check"><input class="form-check-input" type="checkbox" checked="@Model.FechadurasOk" disabled /><label class="form-check-label">Fechaduras OK</label></div>
    <div class="form-check"><input class="form-check-input" type="checkbox" checked="@Model.JanelasVedando" disabled /><label class="form-check-label">Janelas vedando</label></div>
    <div class="form-check"><input class="form-check-input" type="checkbox" checked="@Model.VidrosIntactos" disabled /><label class="form-check-label">Vidros intactos</label></div>

    <!-- Instalações Elétricas -->
    <h5 class="mt-3">Instalações Elétricas</h5>
    <div class="form-check"><input class="form-check-input" type="checkbox" checked="@Model.InterruptoresOk" disabled /><label class="form-check-label">Interruptores OK</label></div>
    <div class="form-check"><input class="form-check-input" type="checkbox" checked="@Model.TomadasFuncionando" disabled /><label class="form-check-label">Tomadas funcionando</label></div>
    <div class="form-check"><input class="form-check-input" type="checkbox" checked="@Model.IluminacaoOk" disabled /><label class="form-check-label">Iluminação OK</label></div>
    <div class="form-check"><input class="form-check-input" type="checkbox" checked="@Model.QuadroLuzOk" disabled /><label class="form-check-label">Quadro de luz OK</label></div>

    <!-- Instalações Hidráulicas -->
    <h5 class="mt-3">Instalações Hidráulicas</h5>
    <div class="form-check"><input class="form-check-input" type="checkbox" checked="@Model.TorneirasSemVazamento" disabled /><label class="form-check-label">Torneiras sem vazamento</label></div>
    <div class="form-check"><input class="form-check-input" type="checkbox" checked="@Model.ChuveiroOk" disabled /><label class="form-check-label">Chuveiro OK</label></div>
    <div class="form-check"><input class="form-check-input" type="checkbox" checked="@Model.VasoSanitarioOk" disabled /><label class="form-check-label">Vaso sanitário OK</label></div>
    <div class="form-check"><input class="form-check-input" type="checkbox" checked="@Model.RalosDesentupidos" disabled /><label class="form-check-label">Ralos desentupidos</label></div>

    <!-- Cozinha -->
    <h5 class="mt-3">Cozinha</h5>
    <div class="form-check"><input class="form-check-input" type="checkbox" checked="@Model.PiaBomEstado" disabled /><label class="form-check-label">Pia em bom estado</label></div>
    <div class="form-check"><input class="form-check-input" type="checkbox" checked="@Model.ArmariosCozinhaOk" disabled /><label class="form-check-label">Armários OK</label></div>
    <div class="form-check"><input class="form-check-input" type="checkbox" checked="@Model.FogaoIncluido" disabled /><label class="form-check-label">Fogão incluso</label></div>
    <div class="form-check"><input class="form-check-input" type="checkbox" checked="@Model.GeladeiraIncluida" disabled /><label class="form-check-label">Geladeira inclusa</label></div>

    <!-- Banheiro -->
    <h5 class="mt-3">Banheiro</h5>
    <div class="form-check"><input class="form-check-input" type="checkbox" checked="@Model.BoxBomEstado" disabled /><label class="form-check-label">Box em bom estado</label></div>
    <div class="form-check"><input class="form-check-input" type="checkbox" checked="@Model.EspelhosOk" disabled /><label class="form-check-label">Espelhos OK</label></div>
    <div class="form-check"><input class="form-check-input" type="checkbox" checked="@Model.ArmariosBanheiroOk" disabled /><label class="form-check-label">Armários OK</label></div>
    <div class="form-check"><input class="form-check-input" type="checkbox" checked="@Model.AcabamentosOk" disabled /><label class="form-check-label">Acabamentos OK</label></div>

    <!-- Observações -->
    <h5 class="mt-3">Observações</h5>
    <p>@(string.IsNullOrEmpty(Model.Observacoes) ? "nenhuma" : Model.Observacoes)</p>

    <!-- Foto -->
    @if (!string.IsNullOrEmpty(Model.CaminhoFoto))
    {
        <h5 class="mt-3">Foto da Vistoria</h5>
        <img src="@Url.Content(Model.CaminhoFoto)" alt="Foto da vistoria" class="img-fluid mb-5" style="max-height:350px;" />
    }
</div>

<!-- Botão fixo -->
<a asp-action="Lista" class="btn btn-secondary botao-voltar-fixo">
    ← Voltar
</a>
